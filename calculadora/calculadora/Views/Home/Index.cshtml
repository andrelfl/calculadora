
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        input{width:50px; height:50px}
        #zero{width:102px}
        #igual{height:102px}
        #introducao{width:254px}
    </style>
</head>
<body>
    <div>
        <h1 style="color:red">Calculadora completa</h1>

        <form method="post">
            <table border="1" cellspacing="0" cellpadding="0">
                <tr>
                    <td colspan="5">
                        <input id="introducao" type="text" name="display" readonly />
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="7" name="bt" />
                    </td>
                    <td>
                        <input type="submit" value="8" name="bt" />
                    </td>
                    <td>
                        <input type="submit" value="9" name="bt" />
                    </td>
                    <td>
                        <input type="submit" value=":" name="bt" />
                    </td>
                    <td>
                        <input type="submit" value="+/-" name="bt" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="4" name="bt" />
                    </td>
                    <td>
                        <input type="submit" value="5" name="bt" />
                    </td>
                    <td>
                        <input type="submit" value="6" name="bt" />
                    </td>
                    <td>
                        <input type="submit" value="X" name="bt" />
                    </td>
                    <td>
                        <input type="submit" value="C" name="bt" />
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="1" name="bt" />
                    </td>
                    <td>
                        <input type="submit" value="2" name="bt" />
                    </td>
                    <td>
                        <input type="submit" value="3" name="bt" />
                    </td>
                    <td>
                        <input type="submit" value="-" name="bt" />
                    </td>
                    <td rowspan="2">
                        <input id="igual" type="submit" value="=" name="bt" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <input id="zero" type="submit" value="0" name="bt" />
                    </td>
                    <td>
                        <input type="submit" value="," name="bt" />
                    </td>
                    <td>
                        <input type="submit" value="+" name="bt" />
                    </td>
                </tr>
            </table>
        </form>
    </div>
</body>
</html>
